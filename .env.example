# Azure Speech Service Configuration
SPEECH_KEY=your_azure_speech_key_here
ENDPOINT=https://your-region.api.cognitive.microsoft.com

# PowerPoint to Video Configuration
POWERPOINT_FILE=your_presentation.pptx
# Note: Output video filename is automatically generated from PowerPoint filename
# Example: "presentation.pptx" becomes "presentation_WITH_AZURE_AUDIO.mp4"

# Audio Configuration
VOICE_NAME=en-US-AvaMultilingualNeural
PAUSE_DURATION=1.5
INCLUDE_END_SLIDE=true
